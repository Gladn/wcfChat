<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="730" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="0,0,30,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name ="UserNameTb" HorizontalAlignment="Left" Margin="230,10,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="441" Height="52"/>
        <Button x:Name="BtCon" Click="ButtClk" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="52" Width="215"/>
        <ListBox x:Name="lbChat" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,67,0,115" HorizontalAlignment="Left" Width="661"/>
        <TextBox x:Name="TbChat" HorizontalAlignment="Left" Margin="10,0,0,44" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="661" Height="71" KeyDown="TbChat_KeyDown"/>

    </Grid>
</Window>
